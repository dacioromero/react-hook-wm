{
  "name": "react-hook-wm",
  "version": "0.1.15",
  "description": "Hooks for integrating React with Web Monetization.",
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "react-hooks",
    "web-monetization"
  ],
  "homepage": "https://github.com/dacioromero/react-hook-wm#readme",
  "bugs": "https://github.com/dacioromero/react-hook-wm/issues",
  "repository": "dacioromero/react-hook-wm",
  "license": "MIT",
  "author": "Dacio Romero <dacioromero@gmail.com> (dacio.dev)",
  "sideEffects": false,
  "main": "dist/react-hook-wm.cjs.js",
  "umd:main": "dist/react-hook-wm.umd.js",
  "unpkg": "dist/react-hook-wm.umd.js",
  "module": "dist/react-hook-wm.es.js",
  "jsnext:main": "dist/react-hook-wm.es.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --ignore-path .gitignore",
    "lint": "eslint --ignore-path .gitignore",
    "release": "standard-version",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{json,md,yml}": "yarn format --write",
    "*.{ts,tsx}": "yarn lint --cache --fix"
  },
  "prettier": "@dacio/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@dacio/eslint-config-typescript",
      "@dacio/eslint-config-react"
    ]
  },
  "jest": {
    "projects": [
      {
        "preset": "ts-jest",
        "displayName": "dom",
        "testEnvironment": "jsdom",
        "testMatch": [
          "**/*.test.ts?(x)"
        ],
        "setupFiles": [
          "./src/setupTests.ts"
        ]
      },
      {
        "preset": "ts-jest",
        "displayName": "node",
        "testEnvironment": "node",
        "testMatch": [
          "**/*.test.node.ts?(x)"
        ]
      }
    ]
  },
  "dependencies": {
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@dacio/eslint-config": "^0.3.0",
    "@dacio/eslint-config-react": "^0.3.0",
    "@dacio/eslint-config-typescript": "^0.3.2",
    "@dacio/prettier-config": "^0.3.0",
    "@dacio/tsconfig": "^0.3.0",
    "@testing-library/react-hooks": "^5.1.2",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.23",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "@wessberg/rollup-plugin-ts": "^1.2.21",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.3",
    "jest": "^26.4.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.0.5",
    "react": "^16.13.0",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-terser": "^7.0.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.2.0",
    "types-wm": "^1.1.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "@types/react": "^16.8.0",
    "react": "^16.8.0",
    "types-wm": "^1.1.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "types-wm": {
      "optional": true
    }
  },
  "standard-version": {
    "header": "# Changelog",
    "types": [
      {
        "type": "fix",
        "section": "Fixed"
      },
      {
        "type": "feat",
        "section": "Changed"
      }
    ],
    "tagPrefix": "",
    "releaseCommitMessageFormat": "chore: {{currentTag}}"
  }
}
