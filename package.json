{
  "name": "react-hook-wm",
  "version": "0.1.12",
  "description": "Hooks for integrating React with Web Monetization.",
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "react-hooks",
    "web-monetization"
  ],
  "homepage": "https://github.com/dacioromero/react-hook-wm#readme",
  "bugs": "https://github.com/dacioromero/react-hook-wm/issues",
  "repository": "dacioromero/react-hook-wm",
  "license": "MIT",
  "author": "Dacio Romero <dacioromero@gmail.com> (dacio.dev)",
  "sideEffects": false,
  "main": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint --cache --fix"
  },
  "prettier": "@dacio/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@dacio/eslint-config-typescript",
      "@dacio/eslint-config-react"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "types-wm": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@dacio/eslint-config": "^0.2.4",
    "@dacio/eslint-config-react": "0.2.7",
    "@dacio/eslint-config-typescript": "0.2.5",
    "@dacio/prettier-config": "^0.2.5",
    "@types/react": "^16.9.23",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
