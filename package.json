{
  "name": "react-hook-wm",
  "version": "0.1.12",
  "description": "Hooks for integrating React with Web Monetization.",
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "react-hooks",
    "web-monetization"
  ],
  "homepage": "https://github.com/dacioromero/react-hook-wm#readme",
  "bugs": "https://github.com/dacioromero/react-hook-wm/issues",
  "repository": "dacioromero/react-hook-wm",
  "license": "MIT",
  "author": "Dacio Romero <dacioromero@gmail.com> (dacio.dev)",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{json,md,js}": "prettier --write"
  },
  "prettier": "@dacio/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@dacio/eslint-config-typescript",
      "@dacio/eslint-config-react"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/",
    "rollup.config.js"
  ],
  "dependencies": {
    "tslib": "^1.11.1",
    "types-wm": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@dacio/eslint-config": "^0.2.4",
    "@dacio/eslint-config-react": "0.2.9",
    "@dacio/eslint-config-typescript": "0.2.5",
    "@dacio/prettier-config": "^0.2.5",
    "@rollup/plugin-typescript": "^4.0.0",
    "@types/react": "^16.9.23",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "@wessberg/rollup-plugin-ts": "^1.2.21",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.1.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "resolutions": {
    "**/mkdirp/minimist": "^0.2.1"
  }
}
