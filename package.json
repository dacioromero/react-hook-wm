{
  "name": "react-hook-wm",
  "version": "0.1.12",
  "description": "Hooks for integrating React with Web Monetization.",
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "react-hooks",
    "web-monetization"
  ],
  "homepage": "https://github.com/dacioromero/react-hook-wm#readme",
  "bugs": "https://github.com/dacioromero/react-hook-wm/issues",
  "repository": "dacioromero/react-hook-wm.git",
  "license": "MIT",
  "author": "Dacio Romero <dacioromero@gmail.com> (dacio.dev)",
  "sideEffects": false,
  "main": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "run-s build:clean build:compile",
    "build:clean": "rimraf dist",
    "build:compile": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "config": {
    "glob": "src/**/*.ts?(x)"
  },
  "dependencies": {
    "types-wm": "^1.1.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.23",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
