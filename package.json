{
  "name": "react-hook-wm",
  "version": "0.1.12",
  "description": "Hooks for integrating React with Web Monetization.",
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "react-hooks",
    "web-monetization"
  ],
  "homepage": "https://github.com/dacioromero/react-hook-wm#readme",
  "bugs": "https://github.com/dacioromero/react-hook-wm/issues",
  "repository": "dacioromero/react-hook-wm",
  "license": "MIT",
  "author": "Dacio Romero <dacioromero@gmail.com> (dacio.dev)",
  "sideEffects": false,
  "main": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "run-s build:clean build:compile",
    "build:clean": "rimraf dist",
    "build:compile": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "prettier": "@dacio/prettier-config",
  "eslintConfig": {
    "extends": "@dacio"
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "types-wm": "^1.1.0"
  },
  "devDependencies": {
    "@dacio/eslint-config": "^0.1.0",
    "@dacio/prettier-config": "^0.1.0",
    "@types/react": "^16.9.23",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
